<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    
    <com.example.paintapp.PaintView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/paintView"
        android:layout_weight="1"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonRed"
            android:background="@color/red"
            android:textColor="@color/white"
            android:text="Red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGreen"
            android:background="@color/green"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:text="Green" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBlue"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:text="Blue" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonBlack"
            android:background="@color/black"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:text="Black" />
    </LinearLayout>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBrushSize"
        android:max="50"
        android:progress="10" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/buttonEraser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/eraser"
            android:drawablePadding="4dp"
            android:text="Eraser" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonReset"
            android:drawableEnd="@drawable/reset"
            android:drawablePadding="4dp"
            android:layout_marginStart="16dp"
            android:text="Reset" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:drawableEnd="@drawable/save"
            android:drawablePadding="4dp"
            android:id="@+id/buttonSave"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>